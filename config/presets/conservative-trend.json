  "slopeSignAnalyzerOptions": {
    "slopeWindow": 18,
    "minSlopeMagnitude": 0.8,
    "hysteresisCount": 18,
    "adaptive": false,
    "adaptiveMinWindow": 18,
    "adaptiveMaxWindow": 18,
    "adaptiveSensitivity": 0.0,
    "confidenceDecayRate": 0.02,
    "adaptiveVolScale": 50,
    "confidenceMultiplier": 1.0
