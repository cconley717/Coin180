  "momentumCompositeAnalyzerOptions": {
    "rsiPeriod": 14,
    "zWindow": 35,
    "buyThreshold": 0.6,
    "sellThreshold": -0.6,
    "hysteresisCount": 18,
    "rsiWeight": 0.6,
    "zWeight": 0.4,
    "adaptive": false,
    "adaptiveMinWindow": 35,
    "adaptiveMaxWindow": 35,
    "adaptiveSensitivity": 0.0,
    "adaptiveVolScale": 50,
    "confidenceDecayRate": 0.02
  },
  "movingAverageAnalyzerOptions": {
    "shortWindow": 12,
    "longWindow": 35,
    "hysteresisCount": 18,
    "adaptive": false,
    "adaptiveMinWindow": 35,
    "adaptiveMaxWindow": 35,
    "adaptiveSensitivity": 0.0,
    "adaptiveVolScale": 50,
    "confidenceDecayRate": 0.02
  },
  "tradeSignalAnalyzerOptions": {
    "windowSize": 60,
    "buyThreshold": 0.90,
    "sellThreshold": -0.90
  }
